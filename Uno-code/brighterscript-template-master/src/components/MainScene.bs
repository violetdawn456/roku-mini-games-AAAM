sub loadPlayers() as roArray
    playerList as roArray = []
    m.global = GetGlobalAA().global

    for each p in m.global.playerList
        playerList.push(new Player(p.name, p.totalActions, p.remainingActions, p.cards, p.selectedCard))
    end for

    return playerList
end sub

sub loadUnoDeck() as Deck
    m.global = GetGlobalAA().global
    unoDeck = new Deck([])
    for each c in m.global.unoDeck.cards
        unoDeck.addCard(Card(c.name, c.iconUri, c.color, c.number))
    end for
    return unoDeck
end sub

