class Deck 
    sub new(cards as roArray)
        m.cards = cards
    end sub

    public function drawCard() as Card
        if m.cards.count() = 0 then
            return invalid
        end if
        return m.cards.pop()
    end function

    public function drawRandomCard() as Card
        if m.cards.count() = 0 then
            return invalid
        end if
        randomIndex as integer = int(Rnd(m.cards.count()) - 1) 
        cardDrawn as Card = m.cards[randomIndex]
        ' m.cards.delete(randomIndex)
        return cardDrawn
    end function

    public function addCard(cardAdded as Card) as void
        m.cards.push(cardAdded)
    end function

    cards as roArray

    ' public function shuffleDeck() as void
    '     m.cards.shuffle()
    ' end function

end class


sub createUnoDeck() as Deck
    deckCards as roArray = []
    colors = ["R", "G", "B", "Y"]
    for each color in colors
        for i = 0 to 9
            deckCards.push(Card(color + i.toStr(), "", color, i))
        end for
        deckCards.push(Card(color + "X", "", color, -1))
        deckCards.push(Card(color + "R", "", color, -2))
        deckCards.push(Card(color + "+", "", color, -3))
        deckCards.push(Card("WW", "", "W", -4))

        deckCards.push(Card(color + "X", "", color, -1))
        deckCards.push(Card(color + "R", "", color, -2))
        deckCards.push(Card(color + "+", "", color, -3))
        deckCards.push(Card("WW", "", "W", -4))

    end for
    return Deck(deckCards)
end sub

class Card
    sub new(name as string, iconUri as string, color as string , number as integer)
        m.name = name
        m.iconUri = iconUri
        m.color = color
        m.number = number
    end sub

    public function getName() as string
        return m.name
    end function

    public function getIconUri() as string
        return m.iconUri
    end function

    name as string
    iconUri as string
end class

class Player

    selectedCard as Card = invalid

    sub new(name as string, totalActions as integer, remainingActions as integer, cards as roArray, selectedCard as Card)
        m.name = name
        m.totalActions = totalActions
        m.remainingActions = remainingActions
        m.cards = cards
        m.selectedCard = selectedCard
    end sub

    name as string
    totalActions as integer
    remainingActions as integer
    cards as roArray = []

    public function getName() as string
        return m.name
    end function

    public function getTotalActions() as integer
        return m.totalActions
    end function

    public function setTotalActions(totalActions as integer) as void
        m.totalActions = totalActions
    end function

    public function getRemainingActions() as integer
        return m.remainingActions
    end function

    public function setRemainingActions(remainingActions as integer) as void
        m.remainingActions = remainingActions
    end function

    public function addCard(cardAdded as Card) as void
        m.cards.push(cardAdded)
    end function

    public function containsCards(cardsChecking as roArray) as boolean
        copyArray = m.cards.clone()
        for each c in cardsChecking
            found = false
            for each cc in copyArray
                if c.getName() = cc.getName() then
                    found = true
                    copyArray.remove(cc)
                    exit for
                end if
            end for
            if not found then
                return false
            end if
        end for
        return true

    end function

    public function removeCards(cardsRemoving as roArray) as void
         for each c in cardsRemoving
            for i = 0 to m.cards.count() - 1
                pc = m.cards[i]
                if c.name = pc.name then
                    m.cards.delete(i)
                    exit for
                end if
            end for
        end for
    end function

    public function getCards() as roArray
        return m.cards
    end function

    public function getCard(index as integer) as Card
        return m.cards[index]
    end function

    public function removeCard(index as integer) as void
        m.cards.delete(index)
    end function

    public function selectCard(cardSelect as Card) as void
        m.selectedCard = cardSelect
    end function

    public function getSelectedCard() as Card
        return m.selectedCard
    end function
        

end class

