sub loadActions() as roArray
    allActions as roArray = []
    allActions.push(new drawCard("Draw Card"))
    allActions.push(new playCard("Play Card"))
    return allActions
end sub

sub checkAvailableActions(playera as Player, allActions as roArray) as roArray
    availableActions as roArray = []
    for each a in allActions
        if a.checkAvailability(playera) then
            availableActions.push(a)
        end if
    end for
    return availableActions
end sub

sub updateActions(playera as Player) as void
    allActions = loadActions()
    availableActions = checkAvailableActions(playera, allActions)
    displayActions(availableActions)
end sub

sub doAction(name as string, playera as Player) as void
    actionList = loadActions()
    currentPlayer = loadCurrentPlayer()
    playerb = loadPlayers()[currentPlayer]
    for each actionNeeded in actionList
        if actionNeeded.getName() = name then
            actionNeeded.runAction(playerb)
            exit for
        end if
    end for
end sub



